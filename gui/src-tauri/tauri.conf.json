{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Apply Task",
  "version": "0.1.0",
  "identifier": "com.applytask.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://127.0.0.1:5173",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Apply Task",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "AI-first task management with deterministic workflows",
    "longDescription": "Apply Task is an AI-first CLI/TUI/GUI for tracking tasks with hexagonal DDD architecture. All operations return structured JSON, perfect for AI agents and automation."
  }
}